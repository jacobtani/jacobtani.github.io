# If you have OpenSSL installed, we recommend updating
# the following line to use "https"
source 'http://rubygems.org'


gem "middleman", "~> 3.4.0"                             #middleman gem
gem "middleman-blog", "~> 3.5.3"                        #blogging gem
gem "middleman-deploy"                                  #helps push final site build to github pages
gem "middleman-livereload"                              # reload dev

# For feed.xml.builder
gem "builder", "~> 3.0"                                 #feed xml builder

gem 'middleman-bootstrap-navbar'                        #simplified bootstrap navbar
gem 'bootstrap-sass', :require => false                 #bootstrap sass
gem 'font-awesome-sass', '~> 4.3.0'                     #font awesome
gem "jquery-middleman"                                  #jquery for middleman
gem 'autoprefixer-rails'                                #automatically adds the proper vendor prefixes to your CSS code when it is compiled.